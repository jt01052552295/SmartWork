<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="1dp"
        android:background="#fff"
        android:weightSum="3"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/r_approval_view_sign1"
            android:text=""
            android:textSize="11dp"
            android:gravity="left|center"/>

        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/r_approval_view_sign2" />
            <TextView
                android:id="@+id/r_approval_view_sign_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/r_approval_view_sign2"
                android:layout_alignTop="@+id/r_approval_view_sign2"
                android:layout_alignRight="@+id/r_approval_view_sign2"
                android:layout_alignBottom="@+id/r_approval_view_sign2"
                android:gravity="left|center"
                android:text=""
                android:textSize="11dp"
                android:textColor="#000000" />

        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/r_approval_view_sign3"
            android:text=""
            android:gravity="center"
            android:textSize="11dp" />
    </LinearLayout>
</LinearLayout>
